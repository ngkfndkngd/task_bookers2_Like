<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

      <%= render 'books/new', user: @user,book: @book %>
      </div>

      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
          <table class="table table-hover table-inverse">
          <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </thead>
            <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to (attachment_image_tag book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg"), user_path(book.user.id) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td>
                <% if current_user.already_favorited?(book) %>
                  <%= link_to book_favorites_path(book), method: :delete do %>
                    <i class="fas fa-heart"></i>
                  <% end %>
                  <%= book.favorites.count %>
                <% else %>
                  <%= link_to book_favorites_path(book), method: :post do %>
                    <i class="far fa-heart"></i>
                  <% end %>
                  <%= book.favorites.count %>
                <% end %>
                </td>
                <td>コメント数: <%= book.book_comments.count %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
 </main>